{
    "name": "snakevil/ccnr2",
    "description": "Clear & Clean Novel Reader v2",
    "type": "project",
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "Snakevil Zen",
            "email": "zsnakevil@gmail.com"
        }
    ],
    "require": {
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-SimpleXML": "*",
        "ext-xmlwriter": "*",
        "zen/core": "*",
        "zen/web-application": "*",
        "zen/model": "*",
        "zen/view": "*",
        "snakevil/zen": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "snakevil\\ccnr2\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "snakevil\\ccnr2Test\\": "share/test"
        }
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    },
    "config": {
        "preferred-install": "dist",
        "vendor-dir": "include",
        "bin-dir": "bin"
    },
    "scripts": {
        "css": "sass -t compressed share/scss/main.scss:share/static/ccnr2.min.css",
        "js": "cd share/static; uglifyjs ccnr2.js -c -m -o ccnr2.min.js --source-map ccnr2.min.js.map",
        "test": [
            "@composer install",
            "phpunit --testdox"
        ]
    }
}
